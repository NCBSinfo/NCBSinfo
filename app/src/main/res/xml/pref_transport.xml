<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:defaultValue="0"
        android:entries="@array/home_spinner_items"
        android:entryValues="@array/home_route_values"
        android:key="settings_transport_routes"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="Default view" />

    <EditTextPreference
        android:key="setting_hurryup"
        android:title="Hurry up time\n (in min)"
        android:summary="Time left color will turn red if next transport is within this time period"
        android:inputType="number"
        />

</PreferenceScreen>