<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rohitsuratekar.NCBSinfo.Home">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:weightSum="100">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="50" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:weightSum="100">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="50"
                    android:id="@+id/shuttle">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/home_section_margin"
                        android:background="@color/home_shuttle"
                        android:gravity="center"
                        android:visibility="visible"
                        android:id="@+id/home_shuttle_Section">

                        <ImageButton
                            android:layout_width="@dimen/home_section_icon_size"
                            android:layout_height="@dimen/home_section_icon_size"
                            android:id="@+id/home_shuttleButton"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_shuttle"
                            android:background="#00ffffff"
                            android:tint="#ffffff"
                            android:alpha="@dimen/home_section_alpha"
                            android:layout_gravity="center_horizontal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="OTHER"
                            android:id="@+id/textView2"
                            android:alpha="@dimen/home_section_alpha"
                            android:textColor="#ffffff"
                            android:textSize="@dimen/home_section_text_size"
                            android:layout_gravity="center_horizontal" />
                    </LinearLayout>


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:layout_margin="@dimen/home_section_margin"
                        android:id="@+id/home_shuttle_animation"
                        android:background="@color/home_Selection"
                        android:visibility="gone"></LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/home_section_margin"
                        android:id="@+id/home_shuttle_options"
                        android:visibility="gone">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="New Button"
                            android:id="@+id/button"
                            android:layout_gravity="center_horizontal" />
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:id="@+id/contact">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/home_section_margin"
                        android:background="@color/home_shuttle"
                        android:gravity="center"
                        android:visibility="visible"
                        android:id="@+id/home_contact_Section" >

                        <ImageButton
                            android:layout_width="@dimen/home_section_icon_size"
                            android:layout_height="@dimen/home_section_icon_size"
                            android:id="@+id/home_contactButton"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_contact"
                            android:background="#00ffffff"
                            android:tint="#ffffff"
                            android:alpha="@dimen/home_section_alpha"
                            android:layout_gravity="center_horizontal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="OTHER"
                            android:id="@+id/textView3"
                            android:alpha="@dimen/home_section_alpha"
                            android:textColor="#ffffff"
                            android:textSize="@dimen/home_section_text_size"
                            android:layout_gravity="center_horizontal" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:layout_margin="@dimen/home_section_margin"
                        android:id="@+id/home_contact_animation"
                        android:background="@color/home_Selection"
                        android:visibility="visible" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/home_section_margin"
                        android:id="@+id/home_contact_options"
                        android:visibility="visible"
                        android:gravity="bottom">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/home_subsection_height"
                            android:layout_gravity="right"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="5sp"
                            android:id="@+id/home_allcontact_layout"
                            android:background="@color/home_subSection" >

                            <ImageView
                                android:layout_width="@dimen/home_subIcon_size"
                                android:layout_height="@dimen/home_subIcon_size"
                                android:id="@+id/imageView3"
                                android:src="@drawable/icon_contactlist"
                                android:scaleType="fitCenter"
                                android:layout_marginLeft="10sp"
                                android:layout_marginRight="5sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="All Contacts"
                                android:id="@+id/textView7"
                                android:textAlignment="center"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/home_subsection_height"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="5sp"
                            android:id="@+id/home_fav_layout"
                            android:background="@color/home_subSection">

                            <ImageView
                                android:layout_width="@dimen/home_subIcon_size"
                                android:layout_height="@dimen/home_subIcon_size"
                                android:id="@+id/imageView2"
                                android:src="@drawable/icon_favorite"
                                android:scaleType="fitCenter"
                                android:layout_marginLeft="10sp"
                                android:layout_marginRight="5sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Favorite"
                                android:id="@+id/textView6"
                                android:textAlignment="center"
                                android:textSize="15sp" />
                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="50" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:weightSum="100" >

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="50"
                    android:id="@+id/updates" >

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/home_section_margin"
                        android:background="@color/home_shuttle"
                        android:gravity="center"
                        android:visibility="visible"
                        android:id="@+id/home_updates_Section" >

                        <ImageButton
                            android:layout_width="@dimen/home_section_icon_size"
                            android:layout_height="@dimen/home_section_icon_size"
                            android:id="@+id/home_updatesButton"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_updates"
                            android:background="#00ffffff"
                            android:tint="#ffffff"
                            android:alpha="@dimen/home_section_alpha"
                            android:layout_gravity="center_horizontal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="OTHER"
                            android:id="@+id/textView4"
                            android:alpha="@dimen/home_section_alpha"
                            android:textColor="#ffffff"
                            android:textSize="@dimen/home_section_text_size"
                            android:layout_gravity="center_horizontal" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:layout_margin="@dimen/home_section_margin"
                        android:id="@+id/home_updates_animation"
                        android:background="@color/home_Selection"
                        android:visibility="gone" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/home_section_margin"
                        android:id="@+id/home_updates_options"
                        android:visibility="gone" >

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="New Button"
                            android:id="@+id/button3"
                            android:layout_gravity="center_horizontal" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:id="@+id/others" >

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/home_section_margin"
                        android:background="@color/home_shuttle"
                        android:gravity="center"
                        android:visibility="visible"
                        android:id="@+id/home_other_Section" >

                        <ImageButton
                            android:layout_width="@dimen/home_section_icon_size"
                            android:layout_height="@dimen/home_section_icon_size"
                            android:id="@+id/home_otherButton"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_other"
                            android:background="#00ffffff"
                            android:tint="#ffffff"
                            android:alpha="@dimen/home_section_alpha"
                            android:layout_gravity="center_horizontal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="OTHER"
                            android:id="@+id/textView5"
                            android:alpha="@dimen/home_section_alpha"
                            android:textColor="#ffffff"
                            android:textSize="@dimen/home_section_text_size"
                            android:layout_gravity="center_horizontal" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:layout_margin="@dimen/home_section_margin"
                        android:id="@+id/home_other_animation"
                        android:background="@color/home_Selection"
                        android:visibility="gone" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/home_section_margin"
                        android:id="@+id/home_other_options"
                        android:visibility="gone" >

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="New Button"
                            android:id="@+id/button4"
                            android:layout_gravity="center_horizontal" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>



</RelativeLayout>
