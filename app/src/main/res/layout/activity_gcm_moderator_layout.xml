<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.rohitsuratekar.NCBSinfo.activity.Activity_GCMModeration">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/Mod_sendScreen"
        android:visibility="visible">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_noti_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <EditText
                android:id="@+id/input_noti_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:hint="Notification Title"
                android:layout_alignTop="@+id/input_layout_noti_title"
                android:layout_centerHorizontal="true" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_noti_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/input_layout_noti_title"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/input_noti_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:hint="Notification Body"
                android:layout_alignTop="@+id/input_layout_noti_body"
                android:layout_centerHorizontal="true" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Send"
            android:id="@+id/sendTopicMessage"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/colorPrimary"
            android:textColor="#ffffff"
            android:onClick="submitButton" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Timing"
            android:id="@+id/setTimeButton"
            android:layout_marginEnd="32dp"
            android:layout_below="@+id/ExtraParameterBox"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="51dp" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Topic_spinner"
            android:layout_below="@+id/home_shuttleSection_nextText"
            android:layout_alignParentStart="true" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Timed Notification"
            android:id="@+id/setTime_CheckBox"
            android:checked="false"
            android:layout_marginStart="35dp"
            android:layout_alignBottom="@+id/setTimeButton"
            android:layout_alignParentStart="true"
            android:visibility="invisible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Select List to send Notification"
            android:id="@+id/home_shuttleSection_nextText"
            android:layout_below="@+id/input_layout_noti_body"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp" />

        <EditText
            android:id="@+id/ExtraParameterBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:hint="Notification Body"
            android:text="Extra parameters"
            android:layout_below="@+id/Topic_spinner"
            android:layout_alignParentStart="true" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Overide"
            android:id="@+id/overideCheck"
            android:layout_below="@+id/setTime_CheckBox"
            android:layout_alignStart="@+id/setTime_CheckBox"
            android:checked="false" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/Mod_sendScreen"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/Mod_loginScreen"
        android:visibility="gone">
        <WebView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mod_loginWeb"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>


</RelativeLayout>
