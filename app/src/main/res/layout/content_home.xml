<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rohitsuratekar.NCBSinfo.HomeActivity"
    tools:showIn="@layout/app_bar_home">


    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    android:id="@+id/MainLayout"
    android:visibility="visible">

    <ImageButton
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:id="@+id/first_time_demo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/home_next_shuttle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="@dimen/home_shuttle_font" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/currentDateText"
        android:layout_below="@+id/home_next_shuttle"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/home_sub_shuttle_font" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/NextShuttleTime"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/currentDateText"
        android:layout_centerHorizontal="true"
        android:hapticFeedbackEnabled="true"
        android:layout_marginBottom="10dp" />

    <NumberPicker
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/numberPicker"
        android:orientation="horizontal"
        android:fadeScrollbars="false"
        android:contextClickable="false"
        android:overScrollMode="always"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:showDividers="middle"
        android:elevation="10dp"
        android:divider="@color/colorPrimary" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/numberPicker"
        android:layout_below="@+id/NextShuttleTime"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:weightSum="1"
        android:gravity="center">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.87"
            android:weightSum="100"
            android:gravity="center"
            android:id="@+id/TimerAnimation">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:id="@+id/HourBar"
                android:background="@color/hourBar_empty"
                android:gravity="bottom"
                android:weightSum="100">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="50"
                    android:id="@+id/HourBarFill"
                    android:background="@color/hourBar_fill"
                    android:gravity="center"></LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:id="@+id/MinuteBar"
                android:background="@color/minuteBar_empty"
                android:gravity="bottom"
                android:weightSum="100" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="50"
                    android:id="@+id/MinuteBarFill"
                    android:background="@color/minuteBar_fill"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:id="@+id/SecondBar"
                android:background="@color/secondBar_empty"
                android:gravity="bottom"
                android:weightSum="100" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="50"
                    android:id="@+id/SecondBarFill"
                    android:background="@color/secondBar_fill"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:weightSum="100"
            android:gravity="center">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="HourLeft"
                android:id="@+id/HourLeft"
                android:layout_weight="30"
                android:textAlignment="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/MinuteLeft"
                android:layout_weight="30"
                android:textAlignment="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/SecondLeft"
                android:layout_weight="30"
                android:textAlignment="center" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/home_onRoute"
        android:id="@+id/textView2"
        android:layout_above="@+id/numberPicker"
        android:layout_centerHorizontal="true"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/home_timeleft"
        android:id="@+id/timeRemaining_home"
        android:layout_below="@+id/NextShuttleTime"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/WelcomeLayout"
        android:gravity="center_horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/app_name"
            android:id="@+id/firstTarget"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="false" />

    </RelativeLayout>
</RelativeLayout>
