<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/home_screen"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.rohitsuratekar.NCBSinfo.Home">

    <ImageView
        android:layout_width="@dimen/home_icon_size"
        android:layout_height="@dimen/home_icon_size"
        android:id="@+id/home_icon"
        android:src="@drawable/image_inapp_logo3"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


    <ImageView
        android:layout_width="@dimen/home_subicon_size"
        android:layout_height="@dimen/home_subicon_size"
        android:id="@+id/home_fragment3"
        android:src="@drawable/icon_triagle_up"
        android:tint="@color/home_fragment3"
        android:layout_alignTop="@+id/home_fragment1"
        android:layout_alignStart="@+id/home_fragment1" />

    <ImageView
        android:layout_width="@dimen/home_subicon_size"
        android:layout_height="@dimen/home_subicon_size"
        android:id="@+id/home_fragment1"
        android:src="@drawable/icon_triagle_corner"
        android:tint="@color/home_fragment1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="@dimen/home_subicon_size"
        android:layout_height="@dimen/home_subicon_size"
        android:id="@+id/home_fragment2"
        android:src="@drawable/triangle"
        android:tint="@color/home_fragment2" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:weightSum="100"
        android:id="@+id/linearLayout"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_offline"
            android:id="@+id/home_offlineBtn"
            android:background="@color/colorPrimary"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/home_icon"
            android:layout_weight="40"
            android:layout_marginRight="10sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_online"
            android:id="@+id/home_onlineBtn"
            android:background="@color/colorPrimary"
            android:textColor="#ffffff"
            android:layout_alignTop="@+id/home_offlineBtn"
            android:layout_toEndOf="@+id/home_icon"
            android:layout_weight="40"
            android:layout_marginLeft="10sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:weightSum="100"
        android:layout_margin="5sp">

        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/home_offline_details"
            android:id="@+id/textView"
            android:layout_gravity="bottom"
            android:layout_weight="50"
            android:textAlignment="center" />

        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/home_online_details"
            android:id="@+id/textView2"
            android:layout_weight="50"
            android:textAlignment="center" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/home_title"
        android:id="@+id/textView3"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15sp"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
