<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.rohitsuratekar.NCBSinfo.activity.Activity_Experimental"
    tools:showIn="@layout/app_bar_activity__experimental">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="50"
            android:weightSum="100">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="50"
                android:gravity="center">
                <ImageButton
                    android:layout_width="@dimen/home_section_icon_size"
                    android:layout_height="@dimen/home_section_icon_size"
                    android:id="@+id/exp_cccp_go"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/icon_cccp"
                    android:scaleType="fitXY"
                    android:background="#00ffffff"
                    android:tint="@color/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="CCCP 2016"
                    android:id="@+id/textView21"
                    android:layout_below="@+id/exp_cccp_go"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10sp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Website"
                    android:id="@+id/exp_cccpButton" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:gravity="center" >

                <ImageButton
                    android:layout_width="@dimen/home_section_icon_size"
                    android:layout_height="@dimen/home_section_icon_size"
                    android:id="@+id/exp_camp_go"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/icon_cccp"
                    android:scaleType="fitXY"
                    android:background="#00ffffff"
                    android:tint="@color/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="CAMP 2016"
                    android:id="@+id/textView22"
                    android:layout_below="@+id/exp_camp_go"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10sp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Website"
                    android:id="@+id/exp_campButton"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
