<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hm_item_layout"
    android:layout_width="match_parent"
    android:layout_height="50sp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/hm_item_sugg_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:contentDescription="@null"
        android:src="@drawable/icon_favorite"
        android:tint="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/hm_item_sugg_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/hm_item_sugg_text"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/hm_item_sugg_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/hm_item_sugg_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>