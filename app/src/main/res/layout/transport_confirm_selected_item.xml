<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="30sp"
    android:background="@color/selected_background"
    android:orientation="vertical"
    android:id="@+id/tp_confrim_selected_layout">

    <TextView
        android:id="@+id/tp_confirm_selected_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textColor="@color/colorPrimaryText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/tp_confirm_selected_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:contentDescription="@null"
        android:src="@drawable/icon_gps_on"
        app:layout_constraintBottom_toBottomOf="@+id/tp_confirm_selected_text"
        app:layout_constraintRight_toLeftOf="@+id/tp_confirm_selected_text"
        app:layout_constraintTop_toTopOf="@+id/tp_confirm_selected_text" />
</android.support.constraint.ConstraintLayout>