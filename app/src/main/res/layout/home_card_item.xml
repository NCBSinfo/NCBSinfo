<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="88sp">

    <ImageView
        android:id="@+id/hm_item_image"
        android:layout_width="@dimen/home_card_icon"
        android:layout_height="@dimen/home_card_icon"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/add_route_info" />

    <TextView
        android:id="@+id/hm_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/hm_item_fav"
        app:layout_constraintStart_toEndOf="@+id/hm_item_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hm_item_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="0dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/hm_item_title"
        app:layout_constraintStart_toStartOf="@+id/hm_item_title"
        app:layout_constraintTop_toBottomOf="@+id/hm_item_title" />

    <ImageView
        android:id="@+id/hm_item_fav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/icon_fav"
        android:tint="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hm_item_next_trip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:text="TextView"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/hm_item_subtitle"
        app:layout_constraintStart_toStartOf="@+id/hm_item_subtitle"
        app:layout_constraintTop_toBottomOf="@+id/hm_item_subtitle" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="0dp"
        android:src="@color/divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/hm_item_subtitle" />
</android.support.constraint.ConstraintLayout>