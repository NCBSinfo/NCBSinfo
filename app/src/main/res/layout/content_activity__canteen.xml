<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.rohitsuratekar.NCBSinfo.activity.Activity_Canteen"
    tools:showIn="@layout/app_bar_activity__canteen">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Coming soon!"
        android:id="@+id/textView19"
        android:layout_marginTop="164dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:alpha="0.7"
        android:textColor="@color/colorPrimary" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:gravity="center"
        android:layout_below="@+id/textView19"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:layout_width="@dimen/home_section_icon_size"
            android:layout_height="@dimen/home_section_icon_size"
            android:id="@+id/imageButton"
            android:layout_below="@+id/textView19"
            android:layout_alignLeft="@+id/textView19"
            android:layout_alignStart="@+id/textView19"
            android:src="@drawable/icon_tea"
            android:scaleType="fitXY"
            android:background="#00ffffff"
            android:alpha="0.7"
            android:tint="@color/colorPrimary" />

        <ImageButton
            android:layout_width="@dimen/home_section_icon_size"
            android:layout_height="@dimen/home_section_icon_size"
            android:id="@+id/imageButton2"
            android:src="@drawable/icon_pizza"
            android:scaleType="fitXY"
            android:background="#00ffffff"
            android:layout_alignTop="@+id/imageButton"
            android:layout_toRightOf="@+id/imageButton"
            android:layout_toEndOf="@+id/imageButton"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:alpha="0.7"
            android:tint="@color/colorPrimary" />

        <ImageButton
            android:layout_width="@dimen/home_section_icon_size"
            android:layout_height="@dimen/home_section_icon_size"
            android:id="@+id/imageButton3"
            android:src="@drawable/icon_canteen"
            android:scaleType="fitXY"
            android:background="#00ffffff"
            android:layout_alignTop="@+id/imageButton2"
            android:layout_toRightOf="@+id/imageButton2"
            android:layout_toEndOf="@+id/imageButton2"
            android:alpha="0.7"
            android:tint="@color/colorPrimary" />
    </LinearLayout>
</RelativeLayout>
