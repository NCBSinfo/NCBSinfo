<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/camp__home_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.rohitsuratekar.NCBSinfo.online.temp.camp.CAMP">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    android:id="@+id/camp_main">
    <android.support.v7.widget.CardView
        android:id="@+id/camp_home_cardview"
        android:layout_width="wrap_content"
        android:layout_height="200sp"
        app:cardElevation="12sp"
        app:cardCornerRadius="2sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:id="@+id/camp_home_footerHolder"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">

            </LinearLayout>

            <ImageView
                android:layout_width="200sp"
                android:layout_height="200sp"
                android:id="@+id/imageView3"
                android:src="@drawable/icon_camp_header"
                android:layout_below="@+id/camp_home_footerHolder"
                android:layout_centerHorizontal="true" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/camp_home_footer"
        android:background="@color/colorPrimary"
        android:gravity="center">

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="100"
        android:id="@+id/camp_card_layout"
        android:layout_below="@+id/camp_home_cardview"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/camp_home_footer"
        android:gravity="center">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Computational Approaches to Memory and Plasticity 2016"
                android:id="@+id/textView19"
                android:textAlignment="center"
                android:layout_marginTop="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Bangalore, India"
                android:id="@+id/textView20"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:weightSum="100"
            android:gravity="center"
            android:id="@+id/camp_linearLayout3"
            android:layout_above="@+id/camp_home_footer"
            android:layout_alignLeft="@+id/camp_home_cardview"
            android:layout_alignStart="@+id/camp_home_cardview">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="25"
                android:gravity="center">

                <ImageView
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:id="@+id/camp_home_icon_transport"
                    android:src="@drawable/icon_shuttle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/transport"
                    android:id="@+id/textView11" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="25"
                android:gravity="center">

                <ImageView
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:id="@+id/camp_home_icon_contacts"
                    android:src="@drawable/icon_contacts" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/contacts"
                    android:id="@+id/textView12" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="25"
                android:gravity="center">

                <ImageView
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:id="@+id/camp_home_icon_lecture"
                    android:src="@drawable/icon_lecturehall" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/lecture_hall" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:gravity="center" >

                <ImageView
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:id="@+id/camp_home_icon_event"
                    android:src="@drawable/icon_camp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/event_updates"
                    android:id="@+id/textView14" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/camp_main"
        android:layout_below="@+id/camp_main"
        android:padding="16sp"
        android:id="@+id/camp_warning"
        android:gravity="bottom">

        <ImageView
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:id="@+id/imageView6"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/icon_camp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView21"
            android:layout_gravity="center_horizontal"
            android:text="Computational Approaches to Memory and Plasticity 2016"
            android:textAlignment="center"
            android:layout_marginRight="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Bangalore, India"
            android:id="@+id/textView22"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10sp"
            android:textAlignment="center" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/camp_message"
            android:id="@+id/textView23"
            android:textSize="15sp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:layout_marginTop="20sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:id="@+id/camp_login"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorPrimary"
            android:textColor="#ffffff"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp" />
    </LinearLayout>


</RelativeLayout>
