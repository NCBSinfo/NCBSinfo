<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:id="@+id/events_layout">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="@dimen/event_log_date_size"
        android:layout_height="@dimen/event_log_date_size"
        android:layout_margin="@dimen/event_log_date_margin"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:alpha="0.8">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="66"
            android:id="@+id/events_date"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#ffffff" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="MAY"
                android:id="@+id/events_month"
                android:textSize="@dimen/event_log_cal_font"
                android:textAlignment="center"
                android:layout_marginBottom="5sp"
                android:textColor="#ffffff" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/events_title"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Details"
            android:id="@+id/events_details"
            android:layout_gravity="center_horizontal"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>