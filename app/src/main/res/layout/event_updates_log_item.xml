<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:id="@+id/event_log_layout">

    <ImageView
        android:layout_width="@dimen/event_log_icon_size"
        android:layout_height="@dimen/event_log_icon_size"
        android:id="@+id/event_log_icon"
        android:layout_margin="@dimen/event_log_icon_margin" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/event_log_title"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Details"
            android:id="@+id/event_log_details"
            android:layout_gravity="center_horizontal"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>