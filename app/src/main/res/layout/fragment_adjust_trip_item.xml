<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:id="@+id/et_adjust_item_layout">

    <TextView
            android:text="TextView"
            android:layout_marginStart="32sp"
            android:layout_marginBottom="8sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/et_adjust_item_text"/>
    <ImageView
            android:layout_marginStart="8sp"
            android:rotation="-90"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/icon_expand"
            android:id="@+id/et_adjust_item_icon"
    />
    <TextView
            android:text="@string/et_first_trip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/et_adjust_item_note"/>
</LinearLayout>