<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/transport_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rohitsuratekar.NCBSinfo.activities.transport.edit.TransportEdit">

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@null"
        app:layout_constraintBottom_toTopOf="@+id/guideline16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/colorPrimary" />

    <ImageView
        android:id="@+id/te_img_route"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:contentDescription="@null"
        android:src="@drawable/icon_map"
        android:tint="@color/colorPrimaryLight"
        app:layout_constraintBottom_toBottomOf="@+id/te_img_trip"
        app:layout_constraintRight_toLeftOf="@+id/te_img_trip"
        app:layout_constraintTop_toTopOf="@+id/te_img_trip" />

    <ImageView
        android:id="@+id/te_img_trip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:contentDescription="@null"
        android:src="@drawable/icon_transport"
        android:tint="@color/colorPrimaryLight"
        app:layout_constraintBottom_toBottomOf="@+id/te_img_confirm"
        app:layout_constraintRight_toLeftOf="@+id/te_img_confirm"
        app:layout_constraintTop_toTopOf="@+id/te_img_confirm" />

    <ImageView
        android:id="@+id/te_img_confirm"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:contentDescription="@null"
        android:src="@drawable/icon_error"
        android:tint="@color/colorPrimaryLight"
        app:layout_constraintBottom_toTopOf="@+id/guideline16"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.rohitsuratekar.NCBSinfo.ui.RestrictedSwipeView
        android:id="@+id/transport_viewpager"
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline16"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/te_btn_cancel"
        android:layout_marginBottom="8dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1037182"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="53dp" />

    <Button
        android:text="@string/cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/te_btn_cancel"
        app:layout_constraintLeft_toLeftOf="@+id/guideline17"
        app:layout_constraintRight_toLeftOf="@+id/guideline18"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/ColoredButton" />

    <Button
        android:text="PREVIOUS"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/te_btn_previous"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline17"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/ColoredButton" />

    <Button
        android:text="NEXT"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/te_btn_next"
        app:layout_constraintLeft_toLeftOf="@+id/guideline18"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/ColoredButton" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline17"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.33854166"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="130dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline18"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="258dp"
        app:layout_constraintGuide_percent="0.671875" />


</android.support.constraint.ConstraintLayout>
