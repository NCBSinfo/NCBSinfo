<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rohitsuratekar.NCBSinfo.activities.transport.TransportEdit"
    android:id="@+id/edit_tranport_main_layout">

    <android.support.v4.view.ViewPager android:id="@+id/transport_viewpager"
        android:layout_width="0dp" android:layout_height="0dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="visible"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/edit_transport_step_indicator"
        android:layout_marginBottom="8dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/icon_right"
        android:id="@+id/edit_transport_next"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:text="NEXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_transport_text"
        app:layout_constraintBottom_toBottomOf="@+id/edit_transport_next"
        app:layout_constraintRight_toLeftOf="@+id/edit_transport_next"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@+id/edit_transport_next" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/edit_transport_next"
        app:layout_constraintTop_toTopOf="@+id/edit_transport_next"
        app:layout_constraintRight_toLeftOf="@+id/edit_transport_text"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/edit_transport_step_indicator" />


</android.support.constraint.ConstraintLayout>


