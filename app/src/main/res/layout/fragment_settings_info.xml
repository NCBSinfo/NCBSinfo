<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".fragments.SettingsInfoFragment">


    <ImageView
            android:src="@color/colorPrimary"
            android:layout_width="0dp"
            android:layout_height="@dimen/st_info_top_image"
            android:id="@+id/imageView4" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/st_info_title"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/st_horizontal_margin"
            app:layout_constraintBottom_toBottomOf="@+id/imageView4"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:layout_marginBottom="8dp"/>

    <ScrollView android:layout_width="0dp" android:layout_height="0dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/imageView4">

        <TextView
                android:id="@+id/st_info_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Something is Wrong !"
                android:textIsSelectable="true"/>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>