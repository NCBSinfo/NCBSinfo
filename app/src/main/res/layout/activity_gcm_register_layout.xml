<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.rohitsuratekar.NCBSinfo.activity.Activity_GCMRegistration">


    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/regiForm_notice"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/input_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:hint="Name"
            android:layout_alignTop="@+id/input_layout_email"
            android:layout_centerHorizontal="true" />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_layout_name">

        <EditText
            android:id="@+id/input_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:inputType="textEmailAddress"
            android:hint="Email" />

    </android.support.design.widget.TextInputLayout>





    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Research Talks"
        android:id="@+id/researchTalk_switch"
        android:checked="true"
        android:layout_below="@+id/regiForm_pref"
        android:layout_marginTop="10dp" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Journal Clubs"
        android:id="@+id/JournalClub_switch"
        android:checked="false"
        android:layout_below="@+id/researchTalk_switch"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Select Notification Preferences"
        android:id="@+id/regiForm_pref"
        android:layout_below="@+id/input_layout_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Student Activities"
        android:id="@+id/studentActivities_switch"
        android:checked="true"
        android:layout_below="@+id/JournalClub_switch"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/RegisterButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="submitForm"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="You will receive notifications after registration. Internet connection is required!"
        android:id="@+id/regiForm_notice"
        android:textAlignment="center"
        android:textSize="15sp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="15dp" />


</RelativeLayout>
