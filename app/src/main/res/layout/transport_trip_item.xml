<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/tp_trip_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:text="@string/placeholder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tp_trip_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/tp_trip_icon"
        android:layout_width="@dimen/transport_trip_icon_size"
        android:layout_height="@dimen/transport_trip_icon_size"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="@dimen/horizontal_margin"
        android:layout_marginTop="0dp"
        android:src="@drawable/icon_circle"
        android:tint="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/tp_trip_half_circle"
        android:layout_width="@dimen/transport_trip_icon_size"
        android:layout_height="@dimen/transport_trip_icon_size"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="@dimen/horizontal_margin"
        android:layout_marginTop="0dp"
        android:src="@drawable/icon_half_circle"
        android:tint="@color/colorPrimary"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>