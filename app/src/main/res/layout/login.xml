<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/login_box_width"
        android:layout_height="@dimen/login_box_height"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <android.support.v7.widget.CardView xmlns:cardview="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            cardview:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/frameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="300sp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@color/login_input_box">

                    <LinearLayout
                        android:id="@+id/login_userLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="@dimen/login_logo"
                            android:layout_height="@dimen/login_logo"
                            android:layout_marginBottom="20sp"
                            android:background="@drawable/icon_profile"
                            android:scaleType="fitXY" />

                        <TextView
                            android:id="@+id/login_message1"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="20sp"
                            android:text="Small Text"
                            android:textAlignment="center"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_layout_signin_user"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/login_vertical_spacing"
                            android:layout_marginEnd="@dimen/login_horizontal_spacing"
                            android:layout_marginStart="@dimen/login_horizontal_spacing"
                            android:hint="@string/email"
                            android:textAlignment="center"
                            android:theme="@style/TextLabel">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/edittext_signin_username"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:inputType="textEmailAddress"
                                android:singleLine="true"
                                android:textAlignment="center" />
                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/linearView"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@color/login_input_activated"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:id="@+id/login_passwordLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="@dimen/login_logo"
                                android:layout_height="@dimen/login_logo"
                                android:layout_marginBottom="20sp"
                                android:background="@drawable/icon_profile"
                                android:scaleType="fitXY" />

                            <TextView
                                android:id="@+id/login_message2"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginBottom="20sp"
                                android:text="Small Text"
                                android:textAlignment="center"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/input_layout_signin_pass"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/login_vertical_spacing"
                                android:layout_marginEnd="@dimen/login_horizontal_spacing"
                                android:layout_marginStart="@dimen/login_horizontal_spacing"
                                android:hint="@string/password"
                                android:textAlignment="center"
                                android:theme="@style/TextLabel">

                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/edittext_signin_password"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:inputType="textPassword"
                                    android:singleLine="true"
                                    android:textAlignment="center" />
                            </android.support.design.widget.TextInputLayout>

                        </LinearLayout>

                    </LinearLayout>

                </FrameLayout>


                <ImageButton
                    android:id="@+id/login_nextButton"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_alignBottom="@id/frameLayout"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="-28dp"
                    android:layout_marginEnd="@dimen/activity_vertical_margin"
                    android:adjustViewBounds="true"
                    android:background="@drawable/icon_forward" />


                <ImageButton
                    android:id="@+id/login_goBackButton"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_alignBottom="@id/frameLayout"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="-28dp"
                    android:layout_marginStart="@dimen/activity_vertical_margin"
                    android:adjustViewBounds="true"
                    android:background="@drawable/icon_reverse"
                    android:visibility="gone" />

            </RelativeLayout>


        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>