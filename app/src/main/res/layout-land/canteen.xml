<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="80"
        android:orientation="vertical"
        android:weightSum="100"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="30"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/canteen_quote"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:text="Medium Text"
                android:textAlignment="center"
                android:textStyle="italic"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/canteen_quote_author"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Small Text"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                 />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0sp"
            android:layout_weight="70"
            android:gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10sp"
                android:orientation="horizontal"
                android:weightSum="100"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:gravity="top|center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/canteen_breakfastIcon"
                        android:layout_width="@dimen/canteen_icons"
                        android:layout_height="@dimen/canteen_icons"
                        android:src="@drawable/icon_breakfast" />

                    <TextView
                        android:id="@+id/canteen_breakfastText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/canteen_breakfast"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:gravity="top|center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/canteen_morningTeaIcon"
                        android:layout_width="@dimen/canteen_icons"
                        android:layout_height="@dimen/canteen_icons"
                        android:src="@drawable/icon_tea" />

                    <TextView
                        android:id="@+id/canteen_morningTeaText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/canteen_morningTea"
                        android:textAlignment="center"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:gravity="top|center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/canteen_lunchIcon"
                        android:layout_width="@dimen/canteen_icons"
                        android:layout_height="@dimen/canteen_icons"
                        android:src="@drawable/icon_canteen" />

                    <TextView
                        android:id="@+id/canteen_lunchText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/canteen_lunch"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:gravity="top|center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/canteen_eveningTeaIcon"
                        android:layout_width="@dimen/canteen_icons"
                        android:layout_height="@dimen/canteen_icons"
                        android:src="@drawable/icon_drink" />

                    <TextView
                        android:id="@+id/canteen_eveningTeaText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/canteen_eveningTea"
                        android:textAlignment="center"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:gravity="top|center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/canteen_dinnerIcon"
                        android:layout_width="@dimen/canteen_icons"
                        android:layout_height="@dimen/canteen_icons"
                        android:src="@drawable/icon_dinner" />

                    <TextView
                        android:id="@+id/canteen_dinnerText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/canteen_dinner"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/canteen_welcome_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:text="@string/canteen_welcome"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/canteen_message"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5sp"
                android:text="@string/canteen_message"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="20"
        android:gravity="bottom"
        android:orientation="vertical">

        <Button
            android:id="@+id/canteen_check_menu"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorPrimary"
            android:text="Today&apos;s Menu"
            android:textColor="#ffffff" />

    </LinearLayout>

</LinearLayout>

