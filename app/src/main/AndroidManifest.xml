<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rohitsuratekar.NCBSinfo">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_map" />

        <uses-library android:name="com.google.android.maps" />

        <activity
            android:name=".Home"
            android:theme="@style/HomeTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Activities -->
        <activity android:name=".activities.OnlineHome" />
        <activity android:name=".activities.OfflineHome" />
        <activity android:name=".activities.transport.Transport"/>
        <activity android:name=".activities.contacts.Contacts"/>
        <activity android:name=".activities.login.Login"/>
        <activity android:name=".activities.login.Registration"/>
        <activity android:name=".activities.events.Events"/>
        <activity android:name=".activities.dashboard.DashBoard"/>

        <!-- Receivers and Services -->
        <receiver android:name=".background.Alarms" />
        <service android:name=".background.NetworkOperations" />
        <service android:name=".background.DataManagement" />

        <service android:name=".background.FireBaseMessage">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".background.FireBaseID">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>